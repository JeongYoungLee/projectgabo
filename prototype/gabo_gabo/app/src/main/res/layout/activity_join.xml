<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1ebd9"
    tools:context=".JoinActivity">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="262dp"
        android:layout_height="299dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.983"
        app:srcCompat="@drawable/join_down_img" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="210dp"
        android:layout_height="335dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/join_up_img" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="196dp"
        android:layout_height="133dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/sign_up_logo" />

    <EditText
        android:id="@+id/edt_id"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:maxLength="20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196" />

    <TextView
        android:id="@+id/tv_check_id"
        android:layout_width="315dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:textColor="#0d6adb"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_id"
        app:layout_constraintTop_toBottomOf="@+id/edt_id" />

    <TextView
        android:id="@+id/tv_check_pw"
        android:layout_width="315dp"
        android:layout_height="20dp"
        android:layout_marginTop="64dp"
        android:textAlignment="center"
        android:textColor="#0d6adb"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_pw"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_pw"
        app:layout_constraintTop_toBottomOf="@+id/edt_id" />

    <TextView
        android:id="@+id/tv_check_pwch"
        android:layout_width="315dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:textColor="#0d6adb"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_pwch"
        app:layout_constraintStart_toStartOf="@+id/edt_pwch"
        app:layout_constraintTop_toBottomOf="@+id/edt_pwch" />

    <TextView
        android:id="@+id/tv_check_email"
        android:layout_width="315dp"
        android:layout_height="20dp"
        android:layout_marginTop="64dp"
        android:textAlignment="center"
        android:textColor="#0d6adb"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_pwch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_pwch"
        app:layout_constraintTop_toBottomOf="@+id/edt_pwch" />

    <TextView
        android:id="@+id/tv_check_phone"
        android:layout_width="315dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:textColor="#0d6adb"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_phone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_phone"
        app:layout_constraintTop_toBottomOf="@+id/edt_phone" />

    <TextView
        android:id="@+id/tv_check_birth"
        android:layout_width="310dp"
        android:layout_height="15dp"
        android:textAlignment="center"
        android:textColor="#0d6adb"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_join_day"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edt_join_year"
        app:layout_constraintTop_toBottomOf="@+id/sp_month" />

    <TextView
        android:id="@+id/tv_check_name"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="128dp"
        android:textAlignment="center"
        android:textColor="#0d6adb"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_pwch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_pwch"
        app:layout_constraintTop_toBottomOf="@+id/edt_pwch" />

    <TextView
        android:id="@+id/tv_check_gender"
        android:layout_width="102dp"
        android:layout_height="19dp"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textColor="#0d6adb"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_check_nick"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="128dp"
        android:textAlignment="center"
        android:textColor="#0d6adb"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_pwch"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edt_pwch"
        app:layout_constraintTop_toBottomOf="@+id/edt_pwch" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:maxLength="20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.199"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <EditText
        android:id="@+id/edt_nick"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Nick Name"
        android:inputType="textPersonName"
        android:maxLength="20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.831"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="316dp"
        android:layout_height="56dp"
        android:backgroundTint="#0d6adb"
        android:text="SIGN UP"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="55dp"
        android:layout_height="18dp"
        android:text="Gender"
        android:textColor="#221C1C"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />

    <EditText
        android:id="@+id/edt_pw"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29" />

    <EditText
        android:id="@+id/edt_pwch"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Password Check"
        android:inputType="textPassword"
        android:maxLength="16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.383" />

    <EditText
        android:id="@+id/edt_mail"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Email Adress"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478" />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:maxLength="16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67" /><![CDATA[





    app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.785"
         />

























    ]]>

    <RadioGroup
        android:id="@+id/rGroup"
        android:layout_width="193dp"
        android:layout_height="49dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btn_join"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.775"
        app:layout_constraintStart_toStartOf="@+id/tv_check_gender"
        app:layout_constraintTop_toBottomOf="@+id/tv_check_birth"
        app:layout_constraintVertical_bias="1.0">

        <RadioButton
            android:id="@+id/radio_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Man" />

        <RadioButton
            android:id="@+id/radio_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Women" />
    </RadioGroup>

    <ImageView
        android:id="@+id/setImage"
        android:layout_width="31dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.871"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382"
        app:srcCompat="@drawable/join_check_on" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.284"
        app:srcCompat="@drawable/sign_up_pwcheck_ico" />

    <EditText
        android:id="@+id/edt_join_year"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Year"
        android:inputType="number"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColor="#707070"
        app:layout_constraintStart_toStartOf="@+id/edt_phone"
        app:layout_constraintTop_toBottomOf="@+id/tv_check_phone" />

    <EditText
        android:id="@+id/edt_join_day"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Day"
        android:inputType="number"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tv_check_nick"
        app:layout_constraintTop_toBottomOf="@+id/tv_check_phone" />

    <Spinner
        android:id="@+id/sp_month"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:entries="@array/월"
        android:textAlignment="center"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toStartOf="@+id/edt_join_day"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/edt_join_year"
        app:layout_constraintTop_toBottomOf="@+id/tv_check_phone" />


</androidx.constraintlayout.widget.ConstraintLayout>